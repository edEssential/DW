<section id="formBacker">
	<div class="container">
		
		<div id="cmsHeader">
			<h2 id="cmsTitle">Add/edit your service's content here</h2>
		</div>
		
		<div class="formWrapper">	
			<%= form_for(@service) do |f| %>
				<%= f.label :Title, class: "formText dark" %><br/>
    			<%= f.text_field :title, class: 'text-area2' %><br /><br />
				<%= f.label :Icon_name, class: "formText dark" %><br/>
    			<%= f.text_field :icon, class: 'text-area2' %><br /><br />
				<%= f.label :Description, class: "formText dark" %><br/>
	    		<%= f.text_area :description, class: 'text-areaArea2' %><br /><br />
	    		<%= f.submit "Save Service", :class => "button3" %>
			<% end %>
		</div>
		
	</div>
</section>