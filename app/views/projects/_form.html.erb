<section id="formBacker">
	<div class="container">
		
		<div id="cmsHeader">
			<h2 id="cmsTitle">Add/edit your project's content here</h2>
		</div>
		
		<div class="formWrapper">	
			<%= form_for(@project) do |f| %>
				<%= f.label :Client, class: "formText dark" %><br/>
    			<%= f.text_field :client, class: 'text-area' %><br /><br />
				<%= f.label :Project_name, class: "formText dark" %><br/>
	    		<%= f.text_field :title, class: 'text-area' %><br /><br />
				<%= f.label :Description, class: "formText dark" %><br/>
	    		<%= f.text_area :description, class: 'text-areaArea' %><br /><br />
				<%= f.label "Vimeo ID (the numbers following vimeo(dot)com)", class: "formText dark" %><br/>
	    		<%= f.text_area :url, class: 'text-area' %><br /><br />
	    		<%= f.submit "Save Project", :class => "button3" %>
			<% end %>
		</div>
		
	</div>
</section>