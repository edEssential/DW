<!-- Services -->
<section id="services" class="container parallax1">

	<div class="inner">

		<!-- Header -->
		<h1 class="header bold dark">Our Services</h1>

		<!-- Description -->
		<h2 class="semibold dark">We work with visionary creative teams to find and deliver <span class="colored">the most compelling and memorable music &amp; artists </span>for any campaign</h2>

		<!-- Boxes -->
		<div class="service-boxes">

			<% @services.each do |s| %>


				<!-- Box 6 -->
				<div class="col-xs-2 service-box animated" data-animation="fadeIn" data-animation-delay="200" data-toggle="tooltip" 
				data-placement="top" title="<%= s.description %>">
					<!-- Icon -->
					<a class="service-icon">
						<i class="fa <%= s.icon %>"></i>
					</a>
					<!-- Header -->
					<p class="service-header dark"><%= s.title %></p>
				</div>
				
			<% end %>

			<div class="clear"></div>

		</div> <!-- End Boxes -->

	</div><!-- End Service Inner -->

</section><!-- End Services Section -->
