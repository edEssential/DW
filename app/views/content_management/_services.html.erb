<div class="cmsWrapper">
	<div class="releases">
		<div class="divHeader">Services</div>
		<div class="tableWrapper">
			<div class="tableContent">
				<% if @services.count > 0 %>
					<table width="100%">
						<tr class="tableHeader">
							<th>TITLE</th>
							<th>ICON-NAME</th>
							<th>DESCRIPTION</th>
						</tr>
						<tr><hr class="ruler"/></tr>
						<% @services.each do |s| %>
							<tr class="tableRow">
								<td width="22%"><%= truncate(s.title, :length => 22) %></td>
								<td width="16%"><%= s.icon %></td>
								<td width="59%"><%= truncate(s.description, :length => 65, :separator => ' ') %></td>
								<td width="3%"><%= link_to image_tag('edit2.png'), edit_service_path(s) %></td>
							</tr>
						<% end %>
					</table>
				<% else %>
					<table width="100%"><tr class="tableRow empty"><td><em>YOU HAVE NO SERVICES YET... ADD SOME BELOW ?!</em></td></tr></table>
				<% end %>
			</div>
			<div id="person-form" title="Person" style="display:none"></div>
		</div>
	</div>
</div>