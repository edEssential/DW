<section class="cmsBacker parallax2">
	
	<div class="">
		<!-- Your Logo -->
		<%= image_tag('logo-icon-m.png') %>
	</div>
	
	<div class="title grid-full">
		<h2 class="bold">Edit <%= resource_name.to_s.humanize %></h2>
		<div class="minusTop"><%= link_to "{ HOME }", root_path %></div>
		<span class="border"></span>
	</div>
	
	<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
		<div class="formWrapper">	
			<% if !devise_error_messages!.empty? %>
				<div class="errorMessages"><%= devise_error_messages! %></div>
			<% end %>
			<%= f.label :email, class: "formText" %><br/>
    		<%= f.email_field :email, class: 'email text-area' %><br /><br />
			<% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
				<div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
			<% end %>
			<%= f.label :password, class: "formText" %> <div class="infoBox">(leave blank if you don't want to change it)</div><br />
    		<%= f.password_field :password, :autocomplete => "off", class: 'email text-area' %><br /><br />
			<%= f.label :password_confirmation, class: "formText" %><br />
    		<%= f.password_field :password_confirmation, class: 'email text-area' %><br /><br />
			<%= f.label :current_password, class: "formText" %> <div class="infoBox">(we need your current password to confirm your changes)</div><br />
			<%= f.password_field :current_password, class: 'email text-area' %><br /><br /><br />
		</div>
		<div class="title grid-full">
			<%= f.submit "Update", class: "button2" %><br/><br/>
		</end>
	<% end %>
</section>